{
  "name": "troidcz/replace",
  "homepage": "https://troid.cz",
  "description": "__REPLACE__",
  "type": "nette-extension",
  "license": "MIT",
  "minimum-stability": "dev",
  "support": {
    "email": "jsem@tomaskulhanek.cz",
    "issues": "https://github.com/Troidcz/__REPLACE__/issues",
    "source": "https://github.com/Troidcz/__REPLACE__"
  },
  "authors": [
    {
      "name": "Tomas Kulhanek",
      "homepage": "https://tomaskulhanek.cz"
    }
  ],
  "require": {
    "php": "^7.4|^8.0"
  },
  "autoload": {
    "psr-4": {
      "Troidcz\\__REPLACE__\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Troidcz\\Tests\\__REPLACE__\\": "tests/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.98",
    "symplify/easy-coding-standard": "^9.4"
  },
  "archive": {
    "exclude": [
      "/tests"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "@ecs": [
      "php -d memory_limit=256M vendor/bin/ecs check src tests"
    ],
    "@ecs-fix": [
      "php -d memory_limit=256M vendor/bin/ecs check src tests --fix"
    ],
    "@phpstan": [
      "php -d memory_limit=512M vendor/bin/phpstan analyse -c phpstan.neon"
    ]
  }
}